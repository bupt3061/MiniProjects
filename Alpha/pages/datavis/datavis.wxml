<!--pages/datavis/datavis.wxml-->
<view class="container">
  <view class="container zan-font-16 zan-c-gray-darker" style="width: 100%; background-color: white; border-bottom: 1px solid #f1f1f1; margin-bottom: 32rpx;">
    <view class="tab" style="display: flex; flex-direction: row; justify-content: space-between; align-items: center; width: 70%; line-height: 88rpx;">
      <block wx:if="{{selectedId == 'datavis'}}">
        <view style="position: relative;" bindtap="tapDatavis">
          <view class="primary">数据分析</view>
          <view class="primary-bg" style="width: 100%; height: 6rpx; position: absolute; bottom: 0;"></view>
        </view>
        <view style="position: relative;" bindtap="tapWorks">
          <view>全部作业</view>
        </view>
      </block>
      <block wx:else>
        <view style="position: relative;" bindtap="tapDatavis">
          <view>数据分析</view>
        </view>
        <view style="position: relative;" bindtap="tapWorks">
          <view class="primary">全部作业</view>
          <view class="primary-bg" style="width: 100%; height: 6rpx; position: absolute; bottom: 0;"></view>
        </view>
      </block>
    </view>
  </view>

  <view class="container zan-font-14" style="width: 100%; background-color: white; margin-bottom: 32rpx;">
    <view style="width: 100%; padding: 24rpx 32rpx; border-bottom: 1px solid #f1f1f1;">
      <view style="margin-left: 32rpx;">成绩分布</view>
    </view>
     <!-- <ff-canvas id="id-barchart" canvas-id="barchart" opts="{{ opts }}"></ff-canvas> -->
     <ff class="f2-chart" onInit="{{onInitBarChart}}" />
  </view>

</view>