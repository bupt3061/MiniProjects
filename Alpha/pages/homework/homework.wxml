<!--pages/homework/homework.wxml-->
<import src="../template/template.wxml" />

<view class="container zan-font-14 zan-c-black" style="padding: 32rpx 0px;">
  <block wx:if="{{uploadNum > 0}}">
    <template is="title" data="{{title: '未提交'}}" />
    <view style="background-color: white; border-radius: 18rpx; width: 90%; margin-bottom: 32rpx; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2); display: flex; flex-direction: row;">
      <view style="position: relative; height: 160rpx; width: 30%;">
        <image style="position: absolute; width: 100%; height: 100%; left: 0; top: 0; border-radius: 18rpx;" mode="scaleToFill" src="../../img/cpsj.jpg" />
        <view style="position: absolute; width: 100%; text-align: center; line-height: 160rpx; color: white;">产品设计</view>
      </view>
      <view style="padding: 32rpx; width: 40%;">
        <view style="margin-bottom: 14rpx">智能家居设计</view>
        <view class="zan-font-12 zan-c-gray-darker">截止时间：</view>
      </view>
      <view style="width: 30%; display: flex; justify-content: flex-start; align-items: center;">
        <view class="primary-bg" style="padding: 8rpx 0; border-radius: 50rpx; text-align: center; width: 70%;">提交</view>
      </view>
    </view>
  </block>
  <block>
    <template is="title" data="{{title: '已提交'}}" />
  </block>
</view>