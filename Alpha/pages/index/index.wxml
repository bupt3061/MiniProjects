<!--index.wxml-->
<block wx:if="{{type == 1}}">
  <zan-toptips wx:if="{{courses == []}}" backgroundColor=" #14d1b5" content="{{ content }}" is-show="{{ $zanui.toptips.show }}" bindtap="toMyCourse" />
  <view class="container zan-font-14 zan-c-gray-darker" style="padding-top: 160rpx">
    <view class="card" bindtap="toHomework">
      <text class="zan-font-18">作业<text wx:if="{{uploadNum != 0}}"class="zan-font-18 primary"> ({{uploadNum}}) </text></text>
      <zan-icon class="primary" type="pending-orders" style="font-size: 80rpx"></zan-icon>
    </view>
    <view class="card">
      <text class="zan-font-18">互评<text wx:if="{{evaluateNum != 0}}" class="zan-font-18 primary"> ({{evaluateNum}}) </text></text>
      <zan-icon class="primary" type="chat" style="font-size: 80rpx"></zan-icon>
    </view>
  </view>
</block>

<block wx:if="{{type == 2}}">
  <view class="container zan-font-14 zan-c-gray-darker">
    <text>教师</text>
  </view>
</block>