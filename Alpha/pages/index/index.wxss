/**index.wxss**/

.card {
  width: 80%;
  background-color: white;
  margin: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 56rpx 80rpx;
  box-sizing: border-box;
}

.top-tip {
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  text-align: center;
  position: fixed;
  top: 0;
  padding: 12rpx;
}
