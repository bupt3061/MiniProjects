/* pages/mine/mine.wxss */

.user-info {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 24rpx;
}

.info-container {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 64rpx 0;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
  border: 1px solid #f1f1f1;
  position: absolute;
  top: 0;
  left: 0;
}

.rank {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: -25rpx;
  left: 77rpx;
  transform: rotate(25deg);
}
