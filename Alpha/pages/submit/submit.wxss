/* pages/submit/submit.wxss */

page {
  background-color: white;
}

.title {
  width: 90%;
  display: flex;
  flex-direction: row;
}

.title-field {
  display: block;
  width: 80%;
  text-align: left;
  padding: 32rpx 0;
  border-bottom: solid 1px #f3f3f3;
}

.title-tip {
  width: 20%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: solid 1px #f3f3f3;
}

.desc-area {
  width: 100%;
  height: 300rpx;
  padding: 32rpx 0;
}

.desc-tip {
  text-align: right;
  padding: 32rpx;
}

.tip {
  position: relative;
  width: 100%;
  background-color: #f3f4f6;
}

.add {
  color: #999;
  font-size: 4em;
  text-align: center;
  line-height: 180rpx;
  border: solid 4px #999;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.fitem {
  margin-bottom: 32rpx;
  box-sizing: border-box;
  position: relative;
}

.file {
  width: 95%;
  display: flex;
  flex-wrap: wrap;
  padding: 32rpx 0;
}

.slimg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.del {
  position: absolute;
  top: 0;
  right: 0;
  padding: 12rpx;
}
