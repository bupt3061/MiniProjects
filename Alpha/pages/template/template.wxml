<template name="title">
  <view class="zan-font-18 zan-c-gray-darker" style="width: 90%; display: flex; flex-direction: row; margin-bottom: 32rpx;">
    <view class="primary-bg" style="width: 12rpx; border-radius: 4rpx; margin-right: 12rpx;"></view>
    <view>{{title}}</view>
  </view>
</template>

<template name="wtj-card">
  <view class="card" data-taskid="{{_id}}" bindtap="clickwtj">
    <view class="card-left">
      <image class="card-img" mode="scaleToFill" src="{{courseCover}}" />
      <view class="img-cover">{{coursename}}</view>
    </view>
    <view class="card-middle">
      <view style="margin-bottom: 14rpx; font-weight: bold">{{taskname}}</view>
      <view class="zan-font-12 zan-c-gray-darker">剩余时间：{{shengyu}}</view>
    </view>
    <view class="card-right">
      <view class="primary-bg zan-font-12 card-btn">提交</view>
    </view>
  </view>
</template>

