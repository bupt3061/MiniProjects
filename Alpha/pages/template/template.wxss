.card {
  background-color: white;
  border-radius: 18rpx;
  width: 90%;
  margin-bottom: 32rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: row;
}

.t-card {
  background-color: white;
  border-radius: 18rpx;
  width: 90%;
  margin-bottom: 32rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: row;
}

.card-img {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  border-radius: 18rpx;
}

.img-cover {
  position: absolute;
  width: 100%;
  text-align: center;
  line-height: 160rpx;
  color: white;
  font-weight: bold;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 18rpx;
}

.card-left {
  position: relative;
  height: 160rpx;
  width: 30%;
}

.card-middle {
  padding: 32rpx;
  width: 45%;
}

.card-right {
  width: 25%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.card-btn {
  padding: 12rpx 0;
  border-radius: 50rpx;
  text-align: center;
  width: 85%;
}

.msg-left {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.msg-right {
  width: 30%;
  font-size: 2em;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
}

.drop-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  background-color: white;
  border-radius: 18rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
}

.task-item-odd {
  width: 85%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 32rpx 0;
  border-bottom: 1px solid #f1f1f1;
}

.task-item-even {
  width: 85%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 32rpx 0;
}

.work-card {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  margin-bottom: 32rpx;
  border-radius: 18rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
}

.work-cover {
  height: 400rpx;
  width: 100%;
  border-radius: 18rpx 18rpx 0 0;
}

.basic-info {
  width: 90%;
  padding: 32rpx 0;
}

.work-title {
  font-weight: bold;
  margin-bottom: 24rpx;
}

.other-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.author-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.author-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: 1px solid #f1f1f1;
  margin-right: 8rpx;
}
