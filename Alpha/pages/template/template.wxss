.card {
  background-color: white;
  border-radius: 18rpx;
  width: 90%;
  margin-bottom: 32rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: row;
}

.card-img {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  border-radius: 18rpx;
}

.img-cover {
  position: absolute;
  width: 100%;
  text-align: center;
  line-height: 160rpx;
  color: white;
  font-weight: bold;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 18rpx;
}

.card-left {
  position: relative;
  height: 160rpx;
  width: 30%;
}

.card-middle {
  padding: 32rpx;
  width: 45%;
}

.card-right {
  width: 25%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.card-btn {
  padding: 12rpx 0;
  border-radius: 50rpx;
  text-align: center;
  width: 85%;
}
