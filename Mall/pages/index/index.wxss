/**index.wxss**/

.item-container {
  width: 100%;
  margin-bottom: 8px;
  padding: 0;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.title {
  padding: 16px 8px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.more {
  padding: 4px 8px;
  border: 1px solid #666;
  border-radius: 14px;
}

.items {
  width: 100%;
  padding: 0 8px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.item {
  position: relative;
  width: 32%;
  text-align: center;
  box-sizing: border-box;
}

.item-tag {
  position: absolute;
  width: 40px;
  color: white;
  left: 50%;
  margin-left: -20px;
  background-color: #36b5fa;
  border-radius: 0 0 4px 4px;
  padding: 2px 0;
}
