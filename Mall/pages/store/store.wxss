/* pages/store/store.wxss */

page {
  background-color: white;
}

.search-container {
  width: 100%;
  height: 45px;
  background-color: white;
  border-bottom: 1px solid #fafafa;
  position: fixed;
  top: 0;
  z-index: 1;
}

.search {
  background-color: #ededed;
  height: 28px;
  border: 1px solid #fafafa;
  border-radius: 14px;
  margin: 8px 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.store-container {
  width: 100%;
  display: flex;
  position: relative;
}

.side-nav {
  width: 80px;
  position: fixed;
  left: 0;
  top: 45px;
  border-right: 1px solid #fafafa;
}

.content {
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16px;
  overflow: visible;
  margin: 46px 0 0 81px;
  /* z-index: 0; */
}

.nav-item {
  position: relative
}