<!--pages/xiangqing-ms/xiangqing-ms.wxml-->
<!-- 引用模板 -->
<import src="../../templates/templates.wxml" />

<view class="container zan-font-14 zan-c-black;" style="position: relative;">
  <view class="timer">
    <view style="text-align: center; margin-bottom: 4px;">限时秒杀</view>
    <view style="display: flex; align-items: center; justify-content: center; ">
      <view class="zan-font-10" style="width: 24px; line-height: 24px; color: white; text-align: center; background-color: black; border-radius: 4px; ">{{min}}</view>
      <view class="zan-font-10" style="width: 16px; line-height: 24px; text-align: center; ">:</view>
      <view class="zan-font-10" style="width: 24px; line-height: 24px; color: white; text-align: center; background-color: black; border-radius: 4px; ">{{sec}}</view>
    </view>
  </view>
  <swiper class="swiper" autoplay="{{autoplay}}" indicator-dots="{{indicatorDots}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{indicatorActiveColor}}" circular="{{circular}}">
    <swiper-item wx:for="{{swiperItems}}" wx:key="{{index}}" style="width: inherit; height: inherit; overflow: visible;">
      <image src="{{item.img}}" style="width: inherit; " mode="widthFix" />
    </swiper-item>
  </swiper>
  <view class="price">
    <view class="primary-c-dark zan-font-18" style="margin-right: 8px; font-weight: bold;">￥{{currentPrice}}</view>
    <view style="text-decoration: line-through">￥{{originalPrice}}</view>
  </view>
  <view class="info">
    <view class="zan-font-16" style="font-weight: bold;">{{title}}</view>
    <view class="zan-font-12 store" bindtap="toStore">
      {{store}}
      <zan-icon class="zan-font-10" type="arrow"></zan-icon>
    </view>
  </view>
  <view class="pintuan" style="width: 100%; box-sizing: border-box; background-color: white;">
    <view style="padding: 16px;">
      {{total}}人出价
    </view>
    <scroll-view style="width: 100%; height: 120px; overflow: hidden; ">
      <view style="display: flex; align-items: center;  box-sizing: border-box;">
        <image src="../../img/zhanwei.png" style="width: 48px; height: 48px; border: 1px solid #fafafa; border-radius: 24px; marigin-right: 8px" mode="widthFix" />
        <view>nickname</view>
      </view>
    </scroll-view>
  </view>
</view>