<template name="course-card">
  <view style="dislay: flex; flex-direction:column; justify-content: center; align-items: center; width: 90%; margin-bottom: 32rpx; " bindtap="clickCourse">
    <view class="card" style="width: 100%; margin-bottom: 2rpx;" data-courseid="{{_id}}" bindtap="clickCourse">
      <view class="card-left">
        <image class="card-img" mode="scaleToFill" src="{{coverPath}}" />
      </view>
      <view class="card-middle">
        <view style="margin-bottom: 14rpx; font-weight: bold">{{coursenameh}}</view>
        <view class="zan-font-12 zan-c-gray-darker">{{shengyu}}</view>
      </view>
      <view class="card-right" style="justify-content: flex-end; margin-right: 32rpx;">
        <image src="{{btn}}" style="width: 48rpx; height: 48rpx;"></image>
      </view>
      <view style="position: absolute; left: 0; top: 142rpx; height: 180rpx; background-color: red;"></view>
    </view>
    <view wx:if="{{status}}" class="drop-box">
      <block wx:for="{{tasks}}" wx:for-index="idx" wx:for-item="itm" wx:key="{{idx}}">
        <block wx:if="{{idx % 2 == 0}}">
          <view wx:if="{{itm.status}}" class="task-item-odd" data-courseid="{{itm._courseid}}" data-taskid="{{itm._id}}" bindtap="clickTask">
            <view>{{itm.tasknameh}}</view>
            <zan-icon class="zan-c-gray-dark zan-font-14" type="arrow"></zan-icon>
          </view>
          <view wx:else class="task-item-odd zan-c-gray" data-courseid="{{itm._courseid}}" data-taskid="{{itm._id}}">
            <view>{{itm.tasknameh}}</view>
            <zan-icon class="zan-font-14" type="arrow"></zan-icon>
          </view>
        </block>
        <block wx:if="{{idx % 2 != 0}}">
          <view wx:if="{{status}}" class="task-item-even" data-courseid="{{itm._courseid}}" data-taskid="{{itm._id}}" bindtap="clickTask">
            <view>{{itm.tasknameh}}</view>
            <zan-icon class="zan-c-gray-dark zan-font-14" type="arrow"></zan-icon>
          </view>
          <view wx:if="{{!status}}" class="task-item-even zan-c-gray" data-courseid="{{itm._courseid}}" data-taskid="{{itm._id}}">
            <view>{{itm.tasknameh}}</view>
            <zan-icon class="zan-font-14" type="arrow"></zan-icon>
          </view>
        </block>
      </block>
    </view>
  </view>
</template>

